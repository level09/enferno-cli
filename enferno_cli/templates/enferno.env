# Enferno Environment Configuration

# Flask settings
SECRET_KEY=change_this_to_a_random_string
DEBUG=False
SECURITY_PASSWORD_SALT=change_this_to_a_random_string

# Database settings
SQLALCHEMY_DATABASE_URI=postgresql://{{ user_name }}:{{ password }}@localhost/{{ user_name }}

# Redis settings
REDIS_URL=redis://localhost:6379/0

# Mail settings
MAIL_SERVER=localhost
MAIL_PORT=25
MAIL_USE_TLS=False
MAIL_USE_SSL=False
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=info@{{ server_hostname }}

# Admin settings
ADMIN_EMAIL=admin@{{ server_hostname }}
ADMIN_PASSWORD=change_this_password

# Application settings
APP_NAME=Enferno
APP_DOMAIN={{ server_hostname }}
APP_URL=https://{{ server_hostname }} 